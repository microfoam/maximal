#!/bin/bash
echo >> Corduroy.log
echo '                                               < squirt chowder >' >> Corduroy.log

while getopts c option
do
case "${option}"
in
c) 	./surfboard-Pop_Up
	grep 'define b' src/microhom-skor.h | tee -a Corduroy.log
	;;
esac
done

if [ -f Surf_wavereport.mha ]; then
	    rm Surf_wavereport.mha
fi


	# cinch-t originating 2-D conflict
	./maximal -KnxR  -D 8 waves/squeegee/squirt_01-b6.txt		# b3-6
	./maximal -KnxR  -D 8 waves/squeegee/squirt_02-b6.txt		# b3-6

	# cinch-k originating 2-D conflict
	./maximal -KnxR  -D 8 waves/squeegee/squirt_03-b6.txt		# b4-6

	# solved: push new solved runs onto top of stack starting w/ solved-64 

echo
echo
echo
echo "$0"
echo
echo
./surfboard-checkmha
echo 'Commit WCR average of 3 (b=6|5): 0.51333 (0/3 solved)' | tee -a Corduroy.log
echo 'Commit WCR average of 3 (b=4  ): 0.53    (0/3 solved)' | tee -a Corduroy.log
echo 'Commit WCR average of 3 (b=3  ): 0.50333 (1/3 solved)' | tee -a Corduroy.log
echo | tee -a Corduroy.log
