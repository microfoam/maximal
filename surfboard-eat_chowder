#!/bin/bash
./surfboard-Pop_Up

if [ -f Surf_wavereport.mha ]; then
	rm Surf_wavereport.mha
fi
if [ -f waves/foam_and_waves/foam_and_chowder.log ]; then
	rm waves/foam_and_waves/foam_and_chowder.log
fi

./maximal -Rn  waves/chowder/chowder_v369_01.txt
./maximal -Rnx waves/chowder/chowder_v369_01.txt
./maximal -Rn  waves/chowder/chowder_v369_02.txt
./maximal -Rnx waves/chowder/chowder_v369_02.txt
./maximal -Rn  waves/chowder/chowder_v369_03.txt
./maximal -Rnx waves/chowder/chowder_v369_03.txt
./maximal -Rn  waves/chowder/chowder_v369_04.txt
./maximal -Rnx waves/chowder/chowder_v369_04.txt

./surfboard-checkmha

