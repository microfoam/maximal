#!/bin/bash
echo >> Corduroy.log
echo '                                               < chowder 2: three snippet test cases >' >> Corduroy.log

answer="n"

while getopts c option
do
case "${option}"
in
c) 	./surfboard-Pop_Up
	;;
esac
done

if [ -f Surf_wavereport.mha ]; then
	    rm Surf_wavereport.mha
fi


	./maximal -KR -D 8 waves/chowder/snippet-flotsam_10F.txt
	./maximal -KR -D 8 waves/chowder/snippet-flotsam_14F.txt
	./maximal -KR -D 8 waves/chowder/snippet-flotsam_21R.txt

./surfboard-checkmha
echo | tee -a Corduroy.log
